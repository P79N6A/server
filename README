 INSTALL       (any)
 ruby/install
 ruby/install-symlink
 export RUBYLIB=ruby

 OS
 apt-get install thin ruby-nokogiri ruby-tmail graphicsmagick libimage-exiftool-perl libid3-tools source-highlight
 source sh/rc

 SITES
 mkdir -p http://hostname && cp -a {css,js} http://hostname

 RACK
 cp ruby/config.ru .


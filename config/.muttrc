my_hdr From: user@hostname (Name)
set editor=emacs
set edit_headers=yes
set envelope_from=yes

set my_server = mail.host.net
set my_user = ""
set my_pass = ""

#set smtp_url =  "smtp://$my_user:$my_pass@$my_server:587"
set smtp_url =  "smtps://$my_user:$my_pass@$my_server"
set ssl_force_tls = yes
set smtp_pass = $my_pass

set mbox_type=Maildir
set folder="~/.mail"
set spoolfile="~/.mail/mailhost.com"

mailboxes =whats-your.name =panix.com =lists.cpunks.org =googlegroups.com =w3.org =hard-core-dx.com =metzdowd.com =outages.org =nettime.org =haskell.org =netbehavior.org =eff.org

set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats

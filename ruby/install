#!/usr/bin/env ruby
name = 'infodaemon'

 src = File.expand_path File.dirname __FILE__
file = src + '/' + name + '.rb'
 lib = RbConfig::CONFIG["sitelibdir"]
dest = lib + '/' + name

case ARGV[0] || File.basename $0
when 'install'
puts " source file #{file}\n        path #{src}\n     install #{dest}"
puts `rsync -av "#{src}/" #{dest}`
            `cp "#{file}" #{dest}.rb`

when 'install-symlink'
  `ln -s "#{file}" #{dest}.rb`
  `ln -s  "#{src}" #{dest}`

when 'uninstall'
  `rm -r #{dest} #{dest}.rb`

end

#!/usr/bin/env ruby
require 'linkeddata'

stat = "http://www.w3.org/ns/posix/stat#"
ldp = "http://www.w3.org/ns/ldp#"

resources = []
containers = []

graph = RDF::Graph.load ARGV[0]

[RDF::RDFS.Resource,RDF::URI(stat+'File'),].map{|file|
  graph.query([nil, RDF.type, file]){|s,p,o| resources << s }}

[RDF::URI(ldp+'BasicContainer'), RDF::URI(stat+'Directory')].map{|dir|
  graph.query([nil, RDF.type, dir]){|s,p,o| containers << s }}

puts containers
puts resources

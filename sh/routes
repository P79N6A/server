#!/system/bin/sh
# start with a blank slate
iptables  -P INPUT DROP
ip6tables -P INPUT DROP
iptables  -P OUTPUT DROP
ip6tables -P OUTPUT DROP
# allow localhost
iptables  -A INPUT -i lo -j ACCEPT
ip6tables -A INPUT -i lo -j ACCEPT
iptables  -A OUTPUT -o lo -j ACCEPT
ip6tables -A OUTPUT -o lo -j ACCEPT
# allow ICMP
iptables  -A INPUT -p icmp -j ACCEPT
ip6tables -A INPUT -p icmp -j ACCEPT
iptables  -A OUTPUT -p icmp -j ACCEPT
ip6tables -A OUTPUT -p icmp -j ACCEPT
# drop QUIC until tool support improves
iptables  -A OUTPUT -p udp --dport 80 -j DROP
ip6tables -A OUTPUT -p udp --dport 80 -j DROP
iptables  -A OUTPUT -p udp --dport 443 -j DROP
ip6tables -A OUTPUT -p udp --dport 443 -j DROP
# send traffic ignoring proxy setting thru proxy for inspection
iptables  -t nat -A OUTPUT -p tcp --dport  80 -j REDIRECT --to-ports 8000 # v4 HTTP to daemon on high-port
ip6tables -t nat -A OUTPUT -p tcp --dport  80 -j REDIRECT --to-ports 8000 # v6 HTTP to daemon on high-port
iptables  -t nat -A OUTPUT -p tcp --dport 443 -j REDIRECT --to-ports 8080 # v4 HTTPS to reverse-proxy on high-port
ip6tables -t nat -A OUTPUT -p tcp --dport 443 -j REDIRECT --to-ports 8080 # v6 HTTPS to reverse-proxy on high-port

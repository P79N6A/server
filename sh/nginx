upstream thin {
  server 127.0.0.1:3000;
}

server {
  listen 80;
  access_log off;
  location / {
      proxy_set_header  Origin-Addr      $remote_addr;
      proxy_set_header  Host             $http_host;
      proxy_redirect    off;
      proxy_pass        http://thin;
  }

  location /fs/ {
    internal;
    alias /var/www/;
  }
}
